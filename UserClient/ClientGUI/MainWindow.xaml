<Window x:Class="ClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" Grid.Row="0" Grid.ColumnSpan="3">
            <TextBlock x:Name="textblock" Text="{Binding UserName}" Height="30" Width="400" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <Button Content="Show example objects" Height="23" HorizontalAlignment="Center" Margin="0,0,0,50" Name="button1" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Width="104" Click="Examples_Click"/>
        <TextBlock x:Name="userExample" Text="{Binding UserExample, Mode=TwoWay}" Height="auto" Width="auto" FontSize="20" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock x:Name="challengeExample" Text="{Binding ChallengeExample}" Height="auto" Width="auto" FontSize="20" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock x:Name="rankingExample" Text="{Binding RankingExample}" Height="auto" Width="auto" FontSize="20" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
